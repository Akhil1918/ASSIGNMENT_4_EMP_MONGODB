<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand text-white" href="/server/data">
                <i class="fas fa-users me-2"></i>Employee Database
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <% for (let i=0; i < nav.length; i++) { %>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="<%=nav[i].link %>">
                                <%= nav[i].name %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% for (let i = 0; i < data.length; i++) { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-user-circle me-2"></i>
                                <%= data[i].EmployeeName %>
                            </h5>
                            <div class="employee-info">
                                <h6 class="card-text">
                                    <i class="fas fa-briefcase me-2"></i>
                                    <%= data[i].EmployeeDesignation %>
                                </h6>
                                <h6 class="card-text">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <%= data[i].EmployeeLocation %>
                                </h6>
                            </div>
                            <div class="salary-badge">
                                <i class="fas fa-dollar-sign me-1"></i>
                                <%= data[i].EmployeeSalary %>
                            </div>
                            <div class="d-flex justify-content-between mt-4">
                                <form method="GET" action="/server/edit/<%= data[i]._id %>" style="display:inline;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-edit me-1"></i> Update
                                    </button>
                                </form>
                                <form method="POST" action="/server/delete/<%= data[i]._id %>" style="display:inline;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>